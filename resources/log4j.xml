<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	
	<!--  log4j.ConsoleAppender: in ra console -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d] %m%n" />
		</layout>
	</appender>

	<!--  log4j.FileAppender: Append= false => override file -->
	<appender name="logfile" class="org.apache.log4j.FileAppender">
		<param name="File" value="./logs/NopCommerce.txt" />
		<param name="Append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d] %m%n" />
		</layout>
	</appender>

	<!--  log4j.RollingFileAppender: Append= true => continuous file -->
	<appender name="file" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="./logs/NopCommerce.log" />
		<param name="append" value="true" />
		<param name="maxFileSize" value="10MB" />
		<param name="maxBackupIndex" value="10" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value=" [%d] %m%n" />
		</layout>
	</appender>

	<!-- [%d] %m%n": date time, message, print next line  -->
	<appender name="testng" class="commons.TestNGAppender">
		<param name="Threshold" value="INFO" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d] %m%n" />
		</layout>
	</appender>

	
	<category name="com.facebook.user">
		<priority value="all" />
		<appender-ref ref="console" />
		<appender-ref ref="logfile" />
		<appender-ref ref="file" />
		<appender-ref ref="testng" />
	</category>


	<root>
		<priority value="warn" />
	</root>

</log4j:configuration>